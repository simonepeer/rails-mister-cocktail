<div class="container mt-3">
  <h3><%= @cocktail.name %></h3>
  <p>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </p>
  <div class="d-flex flex-column">
    <% @cocktail.doses.each do |doses| %>
    <ul>
      <li>
        <strong><%= doses.ingredient.name %></strong>: <%= doses.description %>
        (<%= link_to 'delete', dose_path(doses), method: :delete %>)
      </li>
    </ul>
    <% end %>
  </div>
  <p>
    <%= link_to "Add New Ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-info" %> or <%= link_to 'go back', cocktails_path %>
  </p>
</div>
